{
  "info": {
    "name": "Collaborative Task Manager",
    "_postman_id": "b3e7a3a8-0000-4b9f-bb00-ctm",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api/v1"
    },
    {
      "key": "cookie",
      "value": ""
    },
    {
      "key": "taskId",
      "value": ""
    },
    {
      "key": "notificationId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"user1@example.com\", \"name\": \"User One\", \"password\": \"password123\"}"
        }
      }
    },
    {
      "name": "Auth - Login (captures cookie)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"user1@example.com\", \"password\": \"password123\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const sc = pm.response.headers.get('Set-Cookie');",
              "if (sc) {",
              "  const m = sc.match(/token=([^;]+)/);",
              "  if (m) { pm.collectionVariables.set('cookie', `token=${m[1]}`); }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Auth - Me",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Cookie",
            "value": "{{cookie}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/me",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "me"
          ]
        }
      }
    },
    {
      "name": "Tasks - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Cookie",
            "value": "{{cookie}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/tasks",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "tasks"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"Design API\", \"description\": \"Routes + services\", \"dueDate\": \"2025-10-28T18:30:00.000Z\", \"priority\": \"HIGH\", \"status\": \"TODO\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "try { const json = pm.response.json(); if (json && json.task && json.task.id) { pm.collectionVariables.set('taskId', json.task.id); } } catch (e) {}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Tasks - Patch (assign to self)",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Cookie",
            "value": "{{cookie}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/tasks/{{taskId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "tasks",
            "{{taskId}}"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"assignedToId\": \"<paste_user_id_here>\"}"
        }
      }
    },
    {
      "name": "Tasks - List (assigned)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Cookie",
            "value": "{{cookie}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/tasks?view=assigned",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "tasks"
          ],
          "query": [
            {
              "key": "view",
              "value": "assigned"
            }
          ]
        }
      }
    },
    {
      "name": "Notifications - List",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Cookie",
            "value": "{{cookie}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/notifications",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "notifications"
          ]
        }
      }
    },
    {
      "name": "Notifications - Mark Read",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Cookie",
            "value": "{{cookie}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/notifications/{{notificationId}}/read",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "notifications",
            "{{notificationId}}",
            "read"
          ]
        }
      }
    }
  ]
}